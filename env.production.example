# ============================================
# ELEVATE - PRODUCTION ENVIRONMENT CONFIG
# ============================================
# Copy this file to .env.production and fill in your actual values
# DO NOT commit .env.production to version control

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=production
PORT=3000

# ============================================
# PRODUCTION URLs
# ============================================
# Your production domain (e.g., https://elevate.yourdomain.com)
PUBLIC_URL=https://yourdomain.com

# Storage URL (e.g., https://storage.yourdomain.com or S3 bucket URL)
STORAGE_URL=https://storage.yourdomain.com

# ============================================
# DATABASE (PostgreSQL)
# ============================================
# Production PostgreSQL connection string
# Format: postgresql://username:password@host:port/database?schema=public
DATABASE_URL=postgresql://user:password@db.yourdomain.com:5432/elevate?schema=public

# ============================================
# AUTHENTICATION SECRETS
# ============================================
# Generate secure random 32-byte hex strings:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ACCESS_TOKEN_SECRET=<generate-32-byte-hex-here>
REFRESH_TOKEN_SECRET=<generate-32-byte-hex-here>

# ============================================
# EMAIL (SMTP)
# ============================================
# SMTP connection URL
# Format: smtps://username:password@smtp.yourdomain.com:465
# Or: smtp://username:password@smtp.yourdomain.com:587
SMTP_URL=smtps://user:password@smtp.yourdomain.com:465

# Email sender configuration
MAIL_FROM=noreply@yourdomain.com
MAIL_FROM_NAME=Elevate
MAIL_REPLY_TO=support@yourdomain.com
MAIL_SUPPORT_EMAIL=support@yourdomain.com
MAIL_SUPPORT_URL=https://yourdomain.com/support

# ============================================
# STORAGE (Minio or S3)
# ============================================
# Storage endpoint (Minio server or S3 region endpoint)
STORAGE_ENDPOINT=storage.yourdomain.com
STORAGE_PORT=9000
STORAGE_REGION=us-east-1

# Storage bucket name
STORAGE_BUCKET=elevate-resumes

# Storage credentials
STORAGE_ACCESS_KEY=<your-access-key>
STORAGE_SECRET_KEY=<your-secret-key>

# Storage configuration
STORAGE_USE_SSL=true
STORAGE_SKIP_BUCKET_CHECK=false

# ============================================
# BROWSERLESS (PDF Generation)
# ============================================
# Browserless WebSocket URL
# Format: ws://browserless.yourdomain.com:3001
# Or: wss://browserless.yourdomain.com:3001 (for SSL)
CHROME_URL=ws://browserless.yourdomain.com:3001

# Browserless authentication token
# Generate secure random token:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CHROME_TOKEN=<generate-secure-token-here>
CHROME_IGNORE_HTTPS_ERRORS=false

# ============================================
# OPTIONAL: CROWDIN (Translations)
# ============================================
# Only needed if you want to sync translations
# CROWDIN_PROJECT_ID=<your-crowdin-project-id>
# CROWDIN_PERSONAL_TOKEN=<your-crowdin-token>

# ============================================
# OPTIONAL: SENTRY (Error Tracking)
# ============================================
# Only needed if you want error tracking
# SENTRY_DSN=<your-sentry-dsn>

# ============================================
# SECURITY NOTES
# ============================================
# 1. Generate all secrets using:
#    node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
#
# 2. Never commit this file to version control
#
# 3. Use a secrets management service in production (AWS Secrets Manager, etc.)
#
# 4. Ensure all URLs use HTTPS in production
#
# 5. Set up proper firewall rules for database and storage
#
# 6. Enable 2FA on all service accounts
#
# ============================================

